extends ../layouts/default

block js

block append variables 
	- var currentPage = "home";
	- var themeColor = "dark";

mixin meInfo(icon,image,link)
	.col-2.col-md-1.col-lg-1
		if link
			a(href=link): img.center-img(src=icon width=25)
		else 
			img.center-img(src=icon width=25)
		.mb-4
	.col-8.col-md-10.col-lg-4
		if block
			if link
				a(href=link).no-color
					block
			else 
				block
		else
			p Empty
		.mb-4
	.col-2.col-md-1.col-lg-1
		if image
			if link
				a(href=link): img.center-img(src=image width=30)
			else 
				img.center-img(src=image width=30)
		.mb-4
	br

